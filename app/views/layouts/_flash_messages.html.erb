<div id="flash" class="fixed top-16 sm:top-20 left-4 right-4 sm:left-auto sm:right-4 z-50 space-y-2 max-w-md sm:max-w-md mx-auto sm:mx-0">
  <% flash.each do |type, message| %>
    <div class="<%= type == 'notice' ? 'bg-gradient-to-r from-emerald-500 to-teal-600' : 'bg-gradient-to-r from-red-500 to-rose-600' %> text-white px-4 sm:px-6 py-3 sm:py-4 rounded-xl shadow-2xl backdrop-blur-sm border border-white/20 transform transition-all duration-300 animate-in slide-in-from-right">
      <div class="flex items-center space-x-3">
        <% if type == 'notice' %>
          <svg class="w-5 h-5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
        <% else %>
          <svg class="w-5 h-5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
          </svg>
        <% end %>
        <p class="font-medium text-sm sm:text-base"><%= message %></p>
      </div>
    </div>
  <% end %>
</div>
