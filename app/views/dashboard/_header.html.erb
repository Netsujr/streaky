<div id="dashboard-header" class="mb-8">
  <h1 class="text-3xl font-bold mb-4">Dashboard</h1>
  <div class="bg-white rounded-lg shadow-md p-6">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-gray-600">Today's Completion</p>
        <p class="text-3xl font-bold text-indigo-600"><%= dashboard_data[:today_completion_count] %></p>
      </div>
      <div class="text-right">
        <p class="text-gray-600">Active Habits</p>
        <p class="text-3xl font-bold text-indigo-600"><%= dashboard_data[:habits].count %></p>
      </div>
    </div>
  </div>
</div>
