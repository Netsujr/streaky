<div class="max-w-6xl mx-auto">
  <%= render "dashboard/header", dashboard_data: @dashboard_data %>

  <div class="mb-6 flex items-center justify-between">
    <h2 class="text-2xl font-semibold">Your Habits</h2>
    <%= link_to "New Habit", new_habit_path, class: "bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700" %>
  </div>

  <div id="habits-container" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <%= render partial: "habits/habit_card", collection: @dashboard_data[:habits], as: :habit_data, locals: { dashboard_data: @dashboard_data } %>
  </div>

  <% if @dashboard_data[:habits].empty? %>
    <div class="text-center py-12 bg-white rounded-lg shadow-md">
      <p class="text-gray-600 mb-4">You don't have any habits yet.</p>
      <%= link_to "Create Your First Habit", new_habit_path, class: "bg-indigo-600 text-white px-6 py-3 rounded-lg hover:bg-indigo-700" %>
    </div>
  <% end %>
</div>

<%= render "habits/form_modal" %>
