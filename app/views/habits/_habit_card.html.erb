<div id="<%= dom_id habit_data[:habit] %>" class="bg-white rounded-lg shadow-md p-6">
  <div class="flex items-start justify-between mb-4">
    <div class="flex-1">
      <%= turbo_frame_tag "habit_name_#{habit_data[:habit].id}" do %>
        <h3 class="text-xl font-semibold text-gray-900"><%= habit_data[:habit].name %></h3>
        <%= link_to "Edit", "#", data: { turbo_frame: "habit_name_#{habit_data[:habit].id}" }, class: "text-sm text-gray-500 hover:text-gray-700" %>
      <% end %>
      <%= turbo_frame_tag "habit_name_#{habit_data[:habit].id}_edit", target: "_top" do %>
      <% end %>
    </div>
    <div class="flex items-center space-x-2">
      <% if habit_data[:habit].color.present? %>
        <div class="w-4 h-4 rounded-full bg-<%= habit_data[:habit].color %>-500"></div>
      <% end %>
      <%= link_to "Archive", archive_habit_path(habit_data[:habit]), method: :patch, data: { confirm: "Are you sure?" }, class: "text-sm text-gray-500 hover:text-gray-700" %>
    </div>
  </div>

  <div class="mb-4 grid grid-cols-3 gap-4 text-center">
    <div>
      <p class="text-sm text-gray-600">Current Streak</p>
      <p class="text-2xl font-bold text-indigo-600" id="current-streak-<%= habit_data[:habit].id %>">
        <%= habit_data[:current_streak_days] %>
      </p>
    </div>
    <div>
      <p class="text-sm text-gray-600">Longest Streak</p>
      <p class="text-2xl font-bold text-gray-900">
        <%= habit_data[:longest_streak_days] %>
      </p>
    </div>
    <div>
      <p class="text-sm text-gray-600">7-Day Rate</p>
      <p class="text-2xl font-bold text-gray-900">
        <%= habit_data[:completion_rate_last_7_days] %>%
      </p>
    </div>
  </div>

  <div class="mt-6">
    <p class="text-sm text-gray-600 mb-2">Last 7 Days</p>
    <div class="grid grid-cols-7 gap-2">
      <% (0..6).reverse_each do |i| %>
        <% date = dashboard_data[:week_end_date] - i.days %>
        <% checked_in = habit_data[:checked_in_dates].include?(date) %>
        <%= button_to toggle_checkin_path(habit_data[:habit], date: date),
                      method: :post,
                      data: { controller: "hold-confirm", action: "mousedown->hold-confirm#start touchstart->hold-confirm#start" },
                      class: "relative aspect-square rounded-lg border-2 transition-colors #{checked_in ? 'bg-indigo-600 border-indigo-600 text-white' : 'bg-white border-gray-300 text-gray-600 hover:border-indigo-300'}",
                      form_class: "inline" do %>
          <div data-hold-confirm-target="progressRing" class="absolute inset-0 pointer-events-none"></div>
          <span class="relative z-10 text-xs font-medium"><%= date.strftime("%d") %></span>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
