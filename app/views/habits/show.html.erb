<% calculator = StreakCalculator.new(@habit, reference_date: Time.use_zone(current_user.timezone) { Time.zone.today }, user_timezone: current_user.timezone) %>
<% today = Time.use_zone(current_user.timezone) { Time.zone.today } %>
<% week_start = today - 6.days %>
<% checkins = @habit.checkins.where(occurred_on: week_start..today).pluck(:occurred_on).to_set %>

<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <%= link_to habits_path, class: "inline-flex items-center space-x-2 text-gray-600 hover:text-gray-900 font-medium mb-4" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      <span>Back to Habits</span>
    <% end %>

    <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
      <div class="flex items-center space-x-2 sm:space-x-4 min-w-0 flex-1">
        <% if @habit.color.present? %>
          <div class="w-4 h-4 rounded-full bg-<%= @habit.color %>-500 shadow-sm flex-shrink-0"></div>
        <% end %>
        <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold bg-gradient-to-r from-gray-900 via-gray-800 to-gray-900 bg-clip-text text-transparent truncate"><%= @habit.name %></h1>
      </div>
      <div class="flex items-center space-x-2">
        <%= link_to "#",
            data: {
              controller: "confirmation-modal",
              action: "click->confirmation-modal#show",
              confirm_title: @habit.archived? ? "Restore Habit" : "Archive Habit",
              confirm_message: @habit.archived? ? "Restore '#{@habit.name}' and continue tracking?" : "Are you sure you want to archive '#{@habit.name}'?",
              url: archive_habit_path(@habit),
              method: "patch"
            },
            class: "px-4 py-2.5 text-gray-600 hover:text-gray-800 hover:bg-gray-100 rounded-lg transition-colors text-sm sm:text-base touch-manipulation min-h-[44px] flex items-center justify-center" do %>
          <%= @habit.archived? ? "Restore" : "Archive" %>
        <% end %>
        <%= link_to "#",
            data: {
              controller: "confirmation-modal",
              action: "click->confirmation-modal#show",
              confirm_title: "Delete Habit",
              confirm_message: "Are you sure you want to permanently delete '#{@habit.name}'? This action cannot be undone and will delete all associated check-ins.",
              url: habit_path(@habit),
              method: "delete"
            },
            class: "px-4 py-2.5 text-red-600 hover:text-red-800 hover:bg-red-50 rounded-lg transition-colors text-sm sm:text-base touch-manipulation min-h-[44px] flex items-center justify-center" do %>
          Delete
        <% end %>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 sm:gap-6 mb-6 sm:mb-8">
    <div class="bg-gradient-to-br from-indigo-50 to-indigo-100 rounded-2xl p-5 sm:p-6 text-center border border-indigo-200/50">
      <p class="text-xs sm:text-sm font-semibold text-indigo-700 uppercase tracking-wide mb-2">Current Streak</p>
      <p class="text-3xl sm:text-4xl lg:text-5xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent">
        <%= calculator.current_streak_days %>
      </p>
      <p class="text-xs sm:text-sm text-indigo-600 mt-2">days</p>
    </div>

    <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-2xl p-5 sm:p-6 text-center border border-gray-200/50">
      <p class="text-xs sm:text-sm font-semibold text-gray-700 uppercase tracking-wide mb-2">Longest Streak</p>
      <p class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900">
        <%= calculator.longest_streak_days %>
      </p>
      <p class="text-xs sm:text-sm text-gray-600 mt-2">days</p>
    </div>

    <div class="bg-gradient-to-br from-emerald-50 to-teal-100 rounded-2xl p-5 sm:p-6 text-center border border-emerald-200/50">
      <p class="text-xs sm:text-sm font-semibold text-emerald-700 uppercase tracking-wide mb-2">7-Day Rate</p>
      <p class="text-3xl sm:text-4xl lg:text-5xl font-bold text-emerald-700">
        <%= calculator.completion_rate_last_7_days %>%
      </p>
      <p class="text-xs sm:text-sm text-emerald-600 mt-2">completion rate</p>
    </div>
  </div>

  <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg border border-gray-200/50 p-4 sm:p-6 mb-4 sm:mb-6">
    <h2 class="text-xl sm:text-2xl font-bold text-gray-900 mb-4 sm:mb-6">Habit Details</h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
      <div>
        <p class="text-sm font-semibold text-gray-700 mb-1">Goal per Week</p>
        <p class="text-lg text-gray-900"><%= @habit.goal_per_week %> days</p>
      </div>

      <div>
        <p class="text-sm font-semibold text-gray-700 mb-1">Start Date</p>
        <p class="text-lg text-gray-900"><%= @habit.start_date.strftime("%B %d, %Y") %></p>
      </div>

      <% if @habit.color.present? %>
        <div>
          <p class="text-sm font-semibold text-gray-700 mb-1">Color</p>
          <div class="flex items-center space-x-2">
            <div class="w-6 h-6 rounded-full bg-<%= @habit.color %>-500 shadow-sm"></div>
            <span class="text-lg text-gray-900 capitalize"><%= @habit.color %></span>
          </div>
        </div>
      <% end %>

      <div>
        <p class="text-sm font-semibold text-gray-700 mb-1">Total Check-ins</p>
        <p class="text-lg text-gray-900"><%= @habit.checkins.count %></p>
      </div>
    </div>
  </div>

  <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg border border-gray-200/50 p-4 sm:p-6">
    <h2 class="text-xl sm:text-2xl font-bold text-gray-900 mb-4 sm:mb-6">Last 7 Days</h2>

    <div class="grid grid-cols-7 gap-2 sm:gap-3">
      <% (0..6).reverse_each do |i| %>
        <% date = today - i.days %>
        <% checked_in = checkins.include?(date) %>
        <%= button_to toggle_checkin_path(@habit, date: date),
                      method: :post,
                      class: "relative aspect-square rounded-lg sm:rounded-xl border-2 transition-all duration-200 transform active:scale-95 sm:hover:scale-110 touch-manipulation #{checked_in ? 'bg-gradient-to-br from-indigo-500 to-purple-600 border-indigo-600 text-white shadow-md' : 'bg-white border-gray-300 text-gray-600 hover:border-indigo-400 hover:bg-indigo-50'}",
                      form_class: "inline" do %>
          <div class="flex p-2 sm:p-3 items-center justify-center h-full">
            <span class="text-sm sm:text-base font-bold"><%= date.strftime("%d") %></span>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
