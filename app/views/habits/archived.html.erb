<div class="max-w-7xl mx-auto">
  <div class="flex items-center justify-between mb-8">
    <div>
      <h1 class="text-4xl font-bold bg-gradient-to-r from-gray-900 via-gray-800 to-gray-900 bg-clip-text text-transparent">Archived Habits</h1>
      <p class="text-gray-600 mt-1">View and restore your archived habits</p>
    </div>
    <%= link_to habits_path, class: "inline-flex items-center space-x-2 text-gray-600 hover:text-gray-900 font-medium" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      <span>Back to Habits</span>
    <% end %>
  </div>

  <% if @habits.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @habits.each do |habit| %>
        <div class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg hover:shadow-2xl border border-gray-200/50 p-6 transform hover:scale-[1.02] transition-all duration-300 opacity-75">
          <div class="flex items-start justify-between mb-4">
            <div class="flex-1">
              <div class="flex items-center space-x-3 mb-2">
                <% if habit.color.present? %>
                  <div class="w-3 h-3 rounded-full bg-<%= habit.color %>-500 shadow-sm"></div>
                <% end %>
                <h3 class="text-xl font-bold text-gray-900"><%= habit.name %></h3>
              </div>
              <div class="flex items-center space-x-2 text-sm text-gray-600 mb-2">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
                <span>Goal: <%= habit.goal_per_week %> days/week</span>
              </div>
              <p class="text-xs text-gray-500">
                Archived <%= time_ago_in_words(habit.archived_at) %> ago
              </p>
            </div>
          </div>
          <div class="flex items-center space-x-3 pt-4 border-t border-gray-200">
            <%= link_to habit_path(habit), class: "flex-1 text-center px-4 py-2 bg-indigo-50 text-indigo-700 rounded-lg hover:bg-indigo-100 font-medium transition-colors" do %>
              View
            <% end %>
            <%= link_to "#",
                data: {
                  controller: "confirmation-modal",
                  action: "click->confirmation-modal#show",
                  confirm_title: "Restore Habit",
                  confirm_message: "Restore '#{habit.name}' and continue tracking?",
                  url: archive_habit_path(habit),
                  method: "patch"
                },
                class: "px-4 py-2 text-emerald-600 hover:text-emerald-800 hover:bg-emerald-50 rounded-lg transition-colors font-medium" do %>
              Restore
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-16 bg-white/60 backdrop-blur-sm rounded-2xl shadow-lg border border-gray-200/50">
      <div class="w-20 h-20 mx-auto mb-6 bg-gradient-to-br from-gray-100 to-gray-200 rounded-full flex items-center justify-center">
        <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path>
        </svg>
      </div>
      <h3 class="text-2xl font-bold text-gray-900 mb-2">No archived habits</h3>
      <p class="text-gray-600 mb-6 max-w-md mx-auto">You haven't archived any habits yet. Archived habits will appear here.</p>
      <%= link_to habits_path, class: "inline-flex items-center space-x-2 text-indigo-600 hover:text-indigo-700 font-medium" do %>
        <span>View Active Habits</span>
      <% end %>
    </div>
  <% end %>
</div>
