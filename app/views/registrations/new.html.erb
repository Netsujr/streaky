<div class="max-w-md mx-auto mt-12">
  <h1 class="text-3xl font-bold mb-6 text-center">Sign Up</h1>

  <%= form_with model: @user, url: sign_up_path, class: "bg-white rounded-lg shadow-md p-8" do |form| %>
    <% if @user.errors.any? %>
      <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded-lg">
        <ul class="list-disc list-inside text-red-600">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :name, class: "block text-gray-700 font-medium mb-2" %>
      <%= form.text_field :name, required: true, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
    </div>

    <div class="mb-4">
      <%= form.label :email, class: "block text-gray-700 font-medium mb-2" %>
      <%= form.email_field :email, required: true, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
    </div>

    <div class="mb-4">
      <%= form.label :password, class: "block text-gray-700 font-medium mb-2" %>
      <%= form.password_field :password, required: true, minlength: 6, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
    </div>

    <div class="mb-4">
      <%= form.label :password_confirmation, class: "block text-gray-700 font-medium mb-2" %>
      <%= form.password_field :password_confirmation, required: true, class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
    </div>

    <div class="mb-6">
      <%= form.label :timezone, class: "block text-gray-700 font-medium mb-2" %>
      <%= form.time_zone_select :timezone, ActiveSupport::TimeZone.all, { default: "America/Sao_Paulo" }, { class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent" } %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit "Sign Up", class: "bg-indigo-600 text-white px-6 py-2 rounded-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
      <%= link_to "Sign In", sign_in_path, class: "text-indigo-600 hover:text-indigo-800" %>
    </div>
  <% end %>
</div>
