<div class="max-w-md mx-auto mt-12">
  <div class="text-center mb-8">
    <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-2xl shadow-lg mb-4">
      <span class="text-white font-bold text-2xl">S</span>
    </div>
    <h1 class="text-3xl sm:text-4xl font-bold mb-2 bg-gradient-to-r from-gray-900 via-gray-800 to-gray-900 bg-clip-text text-transparent">Get Started</h1>
    <p class="text-sm sm:text-base text-gray-600">Create your account and start building habits</p>
  </div>

  <%= form_with model: @user, url: sign_up_path, class: "bg-white/80 backdrop-blur-sm rounded-2xl shadow-xl border border-gray-200/50 p-5 sm:p-6 lg:p-8" do |form| %>
    <% if @user.errors.any? %>
      <div class="mb-6 p-4 bg-red-50 border-2 border-red-200 rounded-xl">
        <ul class="list-disc list-inside text-red-700 font-medium space-y-1">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-5">
      <%= form.label :name, class: "block text-gray-700 font-semibold mb-2 text-sm" %>
      <%= form.text_field :name, required: true, class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors bg-white" %>
    </div>

    <div class="mb-5">
      <%= form.label :email, class: "block text-gray-700 font-semibold mb-2 text-sm" %>
      <%= form.email_field :email, required: true, class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors bg-white" %>
    </div>

    <div class="mb-5">
      <%= form.label :password, class: "block text-gray-700 font-semibold mb-2 text-sm" %>
      <%= form.password_field :password, required: true, minlength: 6, class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors bg-white" %>
      <p class="mt-1 text-xs text-gray-500">Minimum 6 characters</p>
    </div>

    <div class="mb-5">
      <%= form.label :password_confirmation, class: "block text-gray-700 font-semibold mb-2 text-sm" %>
      <%= form.password_field :password_confirmation, required: true, class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors bg-white" %>
    </div>

    <div class="mb-6">
      <%= form.label :timezone, class: "block text-gray-700 font-semibold mb-2 text-sm" %>
      <%= form.time_zone_select :timezone, ActiveSupport::TimeZone.all, { default: "America/Sao_Paulo" }, { class: "w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors bg-white" } %>
    </div>

    <div class="space-y-4">
      <%= form.submit "Sign Up", class: "w-full bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-6 py-3 rounded-xl hover:shadow-lg transform hover:scale-[1.02] transition-all duration-200 font-semibold text-sm sm:text-base touch-manipulation min-h-[44px]" %>
      <div class="text-center">
        <p class="text-gray-600 text-sm">
          Already have an account?
          <%= link_to "Sign In", sign_in_path, class: "text-indigo-600 hover:text-indigo-700 font-semibold" %>
        </p>
      </div>
    </div>
  <% end %>
</div>
