<!-- confirmation modal - reused for archive/delete/restore (see confirmation_modal_controller.js) -->
<div id="confirmation-modal" class="hidden fixed inset-0 bg-black/60 backdrop-blur-sm z-50 flex items-center justify-center p-4" data-controller="confirmation-modal">
  <div class="bg-white/95 backdrop-blur-md rounded-2xl shadow-2xl max-w-md w-full border border-gray-200/50 transform transition-all max-h-[90vh] overflow-y-auto">
    <div class="p-5 sm:p-6">
      <div class="flex items-center space-x-3 sm:space-x-4 mb-4">
        <div class="flex-shrink-0 w-10 h-10 sm:w-12 sm:h-12 bg-yellow-100 rounded-full flex items-center justify-center">
          <svg class="w-5 h-5 sm:w-6 sm:h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
          </svg>
        </div>
        <div class="flex-1 min-w-0">
          <h3 class="text-base sm:text-lg font-semibold text-gray-900" data-confirmation-modal-target="title">Confirm Action</h3>
        </div>
      </div>

      <p class="text-sm sm:text-base text-gray-600 mb-5 sm:mb-6" data-confirmation-modal-target="message">
        Are you sure you want to proceed?
      </p>

      <div class="flex flex-col-reverse sm:flex-row items-stretch sm:items-center justify-end gap-2 sm:gap-3 sm:space-x-3">
        <button
          type="button"
          data-action="click->confirmation-modal#cancel"
          class="w-full sm:w-auto px-4 sm:px-4 py-3 sm:py-2 text-gray-700 hover:text-gray-900 hover:bg-gray-100 rounded-lg font-medium transition-colors text-sm sm:text-base touch-manipulation min-h-[44px]">
          Cancel
        </button>
        <button
          type="button"
          data-action="click->confirmation-modal#confirm"
          class="w-full sm:w-auto px-6 sm:px-6 py-3 sm:py-2 bg-gradient-to-r from-indigo-600 to-purple-600 text-white rounded-lg hover:shadow-lg transform hover:scale-105 transition-all duration-200 font-semibold text-sm sm:text-base touch-manipulation min-h-[44px]">
          Confirm
        </button>
      </div>
    </div>
  </div>
</div>
